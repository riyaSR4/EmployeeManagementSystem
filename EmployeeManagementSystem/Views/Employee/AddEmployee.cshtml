@model EmployeeModels.Employee
@{
    ViewData["Title"] = "AddEmployee";
}
<form method="post" >
    <div class="main-addemployee">
    
    <div class="text-center main-container" style=" width:70%">
        <h1 class="Title">Add Employee</h1>
        <div class="adjust">
           @* <label asp-for = "@Model.Name">Name</label>
            <input asp-for = "@Model.Name" />*@

            @Html.LabelFor(model => model.Name)
            <div>
                @Html.EditorFor(model => model.Name)
            </div>
        </div>
        <div class="adjust">
                @*<label asp-for="@Model.City">City</label>
                <input asp-for="@Model.City" />*@
            @Html.LabelFor(model => model.City)
            <div>
                @Html.EditorFor(model => model.City)
            </div>
        </div>
        <div class="adjust">
                @*<label asp-for="@Model.Address">Address</label>
                <input asp-for="@Model.Address" />*@
            @Html.LabelFor(model => model.Address)
            <div>
                @Html.EditorFor(model => model.Address)
            </div>
        </div>
        <div style="padding-top:20px">
            <input type="submit" class="btn btn-default button-adjust" value="Save" />
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="color:green">
                @ViewBag.Message
            </div>
        </div>
    </div>
 
</div>
</form>
<style>
    .main-addemployee {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .adjust {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 70%;
    }

    .main-container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .button-adjust {
        border: 1px solid #aaa;
        background: #6cc56c;
        color: white;
        border-radius: 4px;
    }
</style>